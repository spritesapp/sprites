<!DOCTYPE html>

<html lang="en">
    <head>
        <title>@(ViewBag.Title != null ? string.Format("{0} | Sprites", ViewBag.Title) : Ifly.Resources.Associator.Title)</title>
        <link rel="shortcut icon" href="@Url.Content("/favicon.ico")" type="image/x-icon" />
        <link rel="icon" href="@Url.Content("/favicon.ico")" type="image/x-icon" />

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="description" content="@Ifly.Resources.Associator.Description" />
        <meta name="keywords" content="infographic, infographics, sprites, animated infographics" />

        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans+Condensed:300" type="text/css" />

        <link rel="apple-touch-icon" href="@Url.Content("~/Assets/img/apple-touch-icons/apple-touch-icon.png")" />
        <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/Assets/img/apple-touch-icons/apple-touch-icon-76x76.png")" />
        <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/Assets/img/apple-touch-icons/apple-touch-icon-120x120.png")" />
        <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/Assets/img/apple-touch-icons/apple-touch-icon-152x152.png")" />

        @Styles.Render("~/css/app")

        @RenderSection("header", false)
    </head>
    <body class="@ViewBag.BodyCssClass">
        @RenderBody()

        <footer>
            <div class="footer-wrap">
                @Html.Raw(Ifly.Resources.Associator.FooterText)
            </div>
        </footer>
    </body>

    @Scripts.Render("~/js/app")

    <script>
        Ifly.App.getInstance().initialize();
    </script>

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-46764627-3', 'auto');
        ga('send', 'pageview');
    </script>

    @RenderSection("footer", false)
</html>
