<div id="cover" class="section" style="opacity: 0">
    @RenderBody()
    <a class="section-next section-next-pitch" href="/features" onclick="Ifly.App.getInstance().features(); return false;">@Ifly.Resources.Frontpage.LearnMore</a>
</div>

<div id="features" class="section section-relative" style="opacity: 0">
    <div class="pitch">
        <div class="pitch-row">
            <div class="first">
                <h3><i class="icon-thumbs-up-alt"></i>@Ifly.Resources.Frontpage.Pitch_1</h3>
                <p>@Html.Raw(Ifly.Resources.Frontpage.Pitch_1_Description)</p>
            </div>
            <div class="second">
                <h3><i class="icon-heart-empty"></i>@Ifly.Resources.Frontpage.Pitch_2</h3>
                <p>@Html.Raw(Ifly.Resources.Frontpage.Pitch_2_Description)</p>
            </div>
            <div class="third">
                <h3><i class="icon-spinner"></i>@Ifly.Resources.Frontpage.Pitch_3</h3>
                <p>@Html.Raw(Ifly.Resources.Frontpage.Pitch_3_Description)</p>
            </div>
        </div>
        <div class="pitch-row">
            <div class="first">
                <h3><i class="icon-file-alt"></i>@Ifly.Resources.Frontpage.Pitch_4</h3>
                <p>@Html.Raw(Ifly.Resources.Frontpage.Pitch_4_Description)</p>
            </div>
            <div class="second">
                <h3><i class="icon-tablet"></i>@Ifly.Resources.Frontpage.Pitch_5</h3>
                <p>@Html.Raw(Ifly.Resources.Frontpage.Pitch_5_Description)</p>
            </div>
            <div class="third">
                <h3><i class="icon-code"></i>@Ifly.Resources.Frontpage.Pitch_6</h3>
                <p>@Html.Raw(Ifly.Resources.Frontpage.Pitch_6_Description)</p>
            </div>
        </div>
        <div class="form">
            <div class="row">
                <input type="button" class="form-control" onclick="Ifly.App.getInstance().featuresDetailed(); return false;" value="@Ifly.Resources.Frontpage.SeeFullList" />
            </div>
        </div>
    </div>
    <a class="section-next section-next-video section-next-light" href="/video" onclick="Ifly.App.getInstance().video(); return false;">@Ifly.Resources.Frontpage.MakeVideos</a>
</div>

<div id="video" class="section section-relative" style="opacity: 0">
    <div class="video-inner">
        <h3>@Ifly.Resources.Frontpage.MakeVideoInfographics</h3>
        <div class="video-pitch">
            <div class="video-pitch-left">
                <ul>
                    <li><span class="icon icon-magic"></span><span class="text">@Ifly.Resources.Frontpage.VideoPitch_1</span></li>
                    <li><span class="icon icon-volume-up"></span><span class="text">@Ifly.Resources.Frontpage.VideoPitch_2</span></li>
                    <li><span class="icon icon-cloud-download"></span><span class="text">@Ifly.Resources.Frontpage.VideoPitch_3</span></li>
                </ul>
            </div>
            <div class="video-pitch-right">
                <div class="image" style="background-image: url('/Assets/img/video-snapshot.png');"></div>
            </div>
        </div>
        <p class="watch-example">
            <i class="icon icon-youtube-play"></i>
            <span><a href="https://www.youtube.com/watch?v=aYLAg78qunY">@Ifly.Resources.Frontpage.WatchExampleInfographic</a></span>
        </p>
        <div class="form">
            <div class="row">
                <input type="button" class="form-control" onclick="Ifly.App.getInstance().scrollAndSignUp(2); return false;" value="@Ifly.Resources.Frontpage.StartMakingVideos" />
            </div>
        </div>
    </div>
    <a class="section-next section-next-examples section-next-light" href="/examples" onclick="Ifly.App.getInstance().examples(); return false;">@Ifly.Resources.Frontpage.Examples</a>
</div>

