<div id="pricing" class="section section-relative" style="opacity: 0">
    <div class="pricing-inner">
        <h3>@Ifly.Resources.Frontpage.SubscriptionPlans</h3>
        <ul class="plans">
            <li class="free">
                <div class="box">
                    <h4>@Ifly.Resources.Frontpage.Plan_Free</h4>
                    <div class="amount">
                        <div class="figure">@Ifly.Resources.Frontpage.Plan_Free_Figure</div>
                        <div class="transcript">@Ifly.Resources.Frontpage.Plan_Free_Transcript</div>
                    </div>
                    <div class="description">
                        <p>@(Ifly.Resources.Frontpage.About):</p>
                        <ul>
                            <li><i class="icon-ok"></i>@Ifly.Resources.Frontpage.Plan_Free_Description</li>
                        </ul>
                    </div>
                    <div class="actions">
                        <div class="form">
                            <div class="row">
                                <input type="button" class="form-control" onclick="Ifly.App.getInstance().scrollAndSignUp(0); return false;" value="@Ifly.Resources.Frontpage.Choose" />
