    <a class="section-next section-next-testimonials section-next-light" href="/testimonials" onclick="Ifly.App.getInstance().testimonials(); return false;">@Ifly.Resources.Frontpage.WhatOurUsersSay</a>
</div>

<div id="testimonials" class="section section-relative" style="opacity: 0">
    <div class="testimonials-inner">
        <h3>@Ifly.Resources.Frontpage.WhatOurUsersSay_Long</h3>
        <ul class="quotes">
            <li>
                <p class="quote">@Ifly.Resources.Frontpage.Testimonial_1</p>
                <span class="author">@Html.Raw(Ifly.Resources.Frontpage.Testimonial_1_Author)</span>
            </li>
            <li class="middle">
                <p class="quote">@Ifly.Resources.Frontpage.Testimonial_3</p>
                <span class="author">@Html.Raw(Ifly.Resources.Frontpage.Testimonial_3_Author)</span>
            </li>
            <li>
                <p class="quote">@Ifly.Resources.Frontpage.Testimonial_2</p>
                <span class="author">@Html.Raw(Ifly.Resources.Frontpage.Testimonial_2_Author)</span>
            </li>
        </ul>
        <div class="form">
            <div class="row">
                <input type="button" class="form-control" onclick="Ifly.App.getInstance().scrollAndSignUp(0); return false;" value="@Ifly.Resources.Frontpage.JoinFamily" />
            </div>
        </div>
    </div>
    
    <a class="section-next section-next-contact section-next-light" href="/contact" onclick="Ifly.App.getInstance().contact(); return false;">@Ifly.Resources.Frontpage.Feedback</a>
</div>

<div id="contact" class="section" style="opacity: 0">
    <div class="contact-inner">
        <h3>@Ifly.Resources.Frontpage.Feedback</h3>
        <p>@Html.Raw(Ifly.Resources.Frontpage.Feedback_Body)</p>
        
        <div class="form">
            <div class="row fields-2">
                <input type="text" id="feedback-name" class="form-field" placeholder="@Ifly.Resources.Frontpage.YourName" />
                <input type="text" id="feedback-email" class="form-field form-field-last" placeholder="@Ifly.Resources.Frontpage.YourEmail" />
            </div>
            <div class="row">
                <textarea id="feedback-text" class="form-field full-size" placeholder="@Ifly.Resources.Frontpage.YourMessage"></textarea>
            </div>
            <div class="row">
                <input id="feedback-submit" type="button" class="form-field" data-text-normal="@Ifly.Resources.Frontpage.SendMessage" data-text-busy="@Ifly.Resources.Frontpage.SendingMessage" value="@Ifly.Resources.Frontpage.SendMessage" onclick="Ifly.App.getInstance().submitFeedback();" />
                <span id="feedback-sent">@Ifly.Resources.Frontpage.MessageSent</span>
            </div>
        </div>    
    </div>
</div>