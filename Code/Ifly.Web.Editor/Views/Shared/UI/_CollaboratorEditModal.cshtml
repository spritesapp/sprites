<div id="collaborator-modal" class="collaborator-modal" title="@Ifly.Resources.Editor.Collaboration_EditCollaborators" style="display: none">
    <div data-bind="with: data">
        <div class="form">
            <div>
                <label>@(Ifly.Resources.Editor.Collaboration_PresentationName):</label>
                <span class="form-static-text" data-bind="text: presentationTitle"></span>
            </div>
            <div>
                <label>@(Ifly.Resources.Editor.Collaboration_Collaborators):</label>
                <div class="collaborator-list">
                    <div class="collaborator-list-outer">
                        <ul data-bind="foreach: users, visible: users().length > 0">
                            <li>
                                <a href="javascript:void(0);" data-bind="attr: { title: userInviteEmail }, text: userInviteEmail"></a>
                                <button class="remove" title="@Ifly.Resources.Editor.Collaboration_RemoveCollaborator" data-bind="attr: { disabled: !$parents[1].enabled() }, click: function (data) { $parent.removeUser(data); }">
                                    <i class="icon icon-remove"></i>
                                </button>
                            </li>
                        </ul>

                        <div class="empty dimmed" data-bind="visible: users().length == 0">@Ifly.Resources.Editor.Collaboration_NoCollaborators</div>
                    </div>
                    
                    <div class="add-search">
                        <input type="text" placeholder="@Ifly.Resources.Editor.Collaboration_AddSearch" autocomplete="off" spellcheck="false" data-bind="attr: { disabled: !$parent.enabled() }, event: { keyup: function (data, event) { $data.onAddUserKeyUp(event.target.value, event); } }" />
                        <button title="@Ifly.Resources.Editor.Collaboration_Add" data-bind="attr: { disabled: !$parent.enabled() }, click: function (data, event) { $data.onAddUserKeyUp($(event.target).parents('.add-search').find('input').val(), event); }">@Ifly.Resources.Editor.Collaboration_AddButton</button>
                    </div>
                </div>
            </div>
            <div>
                <div class="collaboration-about">
                    @Html.Raw(Ifly.Resources.Editor.Collaboration_About_Text)
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    Ifly.App.getInstance().registerComponent('CollaboratorEditModal', {
        terminology: {
            save: '@Ifly.Resources.Editor.Save',
            cancel: '@Ifly.Resources.Editor.Cancel',
            saving: '@Ifly.Resources.Editor.Saving'
        }
    });
</script>